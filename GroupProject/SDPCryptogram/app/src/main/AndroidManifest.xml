<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.seclass.sdpcryptogram">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize"
            android:inputType="textNoSuggestions">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerMainActivity"
            android:label="@string/title_activity_player_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AdminMainActivity"
            android:label="@string/title_activity_admin_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddEditCryptogramActivity"
            android:windowSoftInputMode="adjustResize"
            android:inputType="textNoSuggestions"/>
        <activity android:name=".AddEditUserActivity"
            android:windowSoftInputMode="adjustResize"
            android:inputType="textNoSuggestions"/>
        <activity android:name=".CryptogramActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:inputType="textNoSuggestions"/>

    </application>

</manifest>